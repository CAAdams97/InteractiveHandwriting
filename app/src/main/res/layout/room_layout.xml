<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/room_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Layout used to position RoomView underneath the toolbox-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/roomView_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff">

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/docView_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff">

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbox_view"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="bottom"
            android:background="#d9e2ff"
            android:visibility="visible">

            <Button
                android:id="@+id/save_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="saveCanvas"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.894" />

            <Button
                android:id="@+id/change_color_red"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/red_button"
                android:onClick="changeColor"
                android:tag="ff0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.114" />

            <Button
                android:id="@+id/change_color_custom"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                android:onClick="toggleColorPickerView"
                android:tag=""
                android:text="C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.919"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.113" />

            <Button
                android:id="@+id/change_color_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="colorErase"
                android:text="Erase"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.408"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.171" />

            <Button
                android:id="@+id/change_color_green"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/green_button"
                android:onClick="changeColor"
                android:tag="00ff00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.682"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.114" />

            <Button
                android:id="@+id/change_color_blue"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="62dp"
                android:background="@drawable/blue_button"
                android:onClick="changeColor"
                android:tag="0000ff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.265"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.158" />

            <Button
                android:id="@+id/change_color_black"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_marginBottom="29dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/black_button"
                android:onClick="changeColor"
                android:tag="000000"
                app:layout_constraintBottom_toTopOf="@+id/seekBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.114" />

            <Button
                android:id="@+id/load_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="62dp"
                android:onClick="showDocument"
                android:text="Load Document"
                app:layout_constraintBaseline_toBaselineOf="@+id/save_canvas"
                app:layout_constraintStart_toEndOf="@+id/save_canvas" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="148dp"
                android:max="50"
                android:progress="11"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/change_color_black" />

            <Button
                android:id="@+id/toggle_drawing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="11dp"
                android:text="Toggle Drawing/Resize"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/save_canvas"
                app:layout_constraintEnd_toStartOf="@+id/return_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            <Button
                android:id="@+id/return_home"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="34dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="11dp"
                android:text="Home"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/load_document"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toggle_drawing"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbox_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#00555555">


            <Button
                android:id="@+id/toolbox_visible_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_button"
                android:onClick="toggleToolbox"
                android:text="+"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/color_picker_view"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="bottom"
            android:background="#d9e2ff"
            android:visibility="gone">

            <com.skydoves.colorpickerview.ColorPickerView
                android:id="@+id/colorPickerLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="67dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:palette="@drawable/palette"
                app:selector="@drawable/wheel" />

            <Button
                android:id="@+id/closeColorPicker"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_button"
                android:onClick="toggleColorPickerView"
                android:text="X"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>


    </FrameLayout>


</android.support.constraint.ConstraintLayout>